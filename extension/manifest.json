{
  "manifest_version": 3,
  "name": "GHOST-NEXT Ferrari Overlay",
  "version": "1.0.0",
  "description": "Voice-powered clinical documentation overlay with real-time transcription",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": [],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["overlay.js", "assets/*", "styles/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_title": "GHOST-NEXT Overlay",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
